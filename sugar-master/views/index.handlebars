<h1>Sugar!</h1>

<h2>Goods that are not eaten!</h2>

<ul>
  {{#each goods}}
    {{#unless this.eaten}}
      {{> sugar-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Goods that are eaten!</h2>

<ul>
  {{#each goods}}
    {{#if eaten}}
      {{> sugar-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Sweet</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Good:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Eaten!<br>
    <input type="radio" name="eaten" value="0"> Ready!
  </div>

  <button type="submit">Add Good</button>
</form>
